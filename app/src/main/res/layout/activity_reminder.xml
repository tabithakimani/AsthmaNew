<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tab_add_daily_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="25dp">


        <!--        date-->

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="40dp"
            android:layout_marginStart="160dp"
            app:srcCompat="@drawable/app_asthma_small"
            android:layout_marginLeft="150dp" />

        <ImageView
            android:id="@+id/date2"
            android:layout_width="59dp"
            android:layout_height="64dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="28dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:srcCompat="@drawable/date" />

        <TextView
            android:id="@+id/date"
            android:layout_width="100dp"
            android:layout_height="76dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="21dp"
            android:gravity="center|start"
            android:text="Date"

            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/date2"
            app:layout_constraintTop_toBottomOf="@id/logo" />

        <EditText
            android:id="@+id/date1"
            android:layout_width="165dp"
            android:layout_height="72dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:hint="Date"
            android:inputType="textPersonName|number"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/date"
            app:layout_constraintTop_toBottomOf="@id/logo" />

        <!--date-->
        <!--medicine-->

        <ImageView
            android:id="@+id/medicine2"
            android:layout_width="56dp"
            android:layout_height="57dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="41dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date2"
            app:srcCompat="@drawable/inhaler" />

        <TextView
            android:id="@+id/medicine"
            android:layout_width="98dp"
            android:layout_height="54dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="37dp"
            android:gravity="center|start"
            android:text="Medicine"
            android:textSize="14sp"

            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/medicine2"
            app:layout_constraintTop_toBottomOf="@+id/date" />

        <EditText
            android:id="@+id/medicine1"
            android:layout_width="171dp"
            android:layout_height="53dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint="Medicine"
            android:textSize="14sp"
            android:inputType="text"
            app:layout_constraintLeft_toRightOf="@+id/medicine"
            app:layout_constraintTop_toBottomOf="@+id/date1" />
        <!--        medicine-->
        <ImageView
            android:id="@+id/dose2"
            android:layout_width="54dp"
            android:layout_height="66dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="41dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/medicine2"
            app:srcCompat="@drawable/dose" />

        <TextView
            android:id="@+id/dose"
            android:layout_width="93dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="37dp"
            android:gravity="center|start"
            android:text="Dose"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/dose2"
            app:layout_constraintTop_toBottomOf="@+id/medicine" />

        <EditText
            android:id="@+id/dose1"
            android:layout_width="171dp"
            android:layout_height="68dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint="Dose"
            android:inputType="text"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/dose"
            app:layout_constraintTop_toBottomOf="@+id/medicine1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimaryDark"
            android:text="Send"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dose"
            android:layout_marginLeft="150dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>